  <div class="box">
    <%= link_to (image_tag pin.image(:medium)), pin %>
    <p class="description">
    	<%= pin.description %>
    </p>
    <p>
    	<strong>
    		by <%= pin.user.name %>
    	</strong>	
    </p>		
    <% if current_user == pin.user %>
	    <%= link_to 'edit', edit_pin_path(pin) %>
	    <%= link_to 'remove', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>    
  </div>